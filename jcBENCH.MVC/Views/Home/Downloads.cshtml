@model List<jcBENCH.MVC.DAL.Objects.Releases>

@{
    ViewData["Title"] = "Downloads";
}

<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4">Downloads</h1>
        
    <p class="lead">
        Below you'll find the releases of jcBENCH to download, some of the older archived releases from 2012 to 2014 will be made available in time.
    </p>
    
    @if (Model.Count > 0) {
        <div class="card-header latest-release">
            <p class="card-subtitle latest-release">Latest Release</p>
        </div>

        <partial name="_DownloadCard" model="Model.First()" />
    }
    
    <br/><br/>
    <h4 class="prior-releases">Prior Releases</h4>
    @foreach (var release in @Model.Skip(1))
    {
        <partial name="_DownloadCard" model="@release" />
        
        <br/>
    }
    </div>
</div>
@model List<jcBENCH.lib.Objects.TopResultsListingItem>

<div class="center-block">
    <h2 class="text-center">jcBENCH</h2>

    <h3>Top @jcBENCH.web.Common.Constants.TOP_RESULTS_LIMIT Results</h3>

    <table class="table table-striped table-responsive text-left">
        <thead style="background-color: cornflowerblue;">
            <tr>
                <th>#</th>
                <th>Manufacturer</th>
                <th>Model</th>
                <th>Benchmark Result</th>
            </tr>
        </thead>
        <tbody>
        @for (int x = 0; x < Model.Count; x++)
        {
            <tr>
                <td>@(x+1)</td>
                <td>@Model[x].CPUManufacturer</td>
                <td>@Model[x].CPUModelName</td>
                <td>@Model[x].BenchmarkResult</td>
            </tr>
        }
        </tbody>
    </table>
</div>